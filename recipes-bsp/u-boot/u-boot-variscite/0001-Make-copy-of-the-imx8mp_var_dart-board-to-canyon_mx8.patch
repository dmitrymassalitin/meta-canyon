+	int ret;
+	struct udevice *dev;
+
+	/* Clear the BSS. */
+	memset(__bss_start, 0, __bss_end - __bss_start);
+
+	arch_cpu_init();
+
+	timer_init();
+
+	ret = spl_early_init();
+	if (ret)
