+	pmic_reg_write(p, PCA9450_RESET_CTRL, 0xA1);
+
+	/* Set LDO4 voltage to 1.8V */
+	pmic_reg_write(p, PCA9450_LDO4CTRL, 0xCA);
+
+	/* Enable I2C level translator */
+	pmic_reg_write(p, PCA9450_CONFIG2, 0x03);
+
